<source>
  type http
  port 9880
</source>
<source>
  type forward
  port 24224
</source>

<match {{ app_name }}>
  type forward

  type s3

  s3_bucket rails42awstest
  path "logs/#{Socket.gethostname}/"

  time_slice_format %Y%m%d/%Y%m%d-%H
  time_slice_wait 10m

  flush_interval 15s
  buffer_path /var/log/td-agent/s3
</match>
